<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-4">
    <h3 style="display: inline;"><%= render 'users/colored_name', user: @user %></h3> 
    <%= render 'users/badges', user: @user %>
    <h3>
      <small class="text-muted"><%= @user.email %></small>
    </h3>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <% if logged_in? %>
      <% if current_user.can_do(:admin) && current_user != @user %>

        <%= link_to "Edit", edit_user_path(@user), class: "text-warning" %>   
        <%= link_to "Delete", user_path(@user), method: :delete, class: "text-danger",
                                   data: {confirm: "Are you sure you want to do this?"} %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <% unless @user.biography.blank? %>
      <div class="card card-body">
        <%= markdown(@user.biography) %>
      </div>
    <% end %>
  </div>
  
</div>


