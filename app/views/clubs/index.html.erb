<% provide :title, "Clubs" %>

<div class="card">
  <div class="card-header blue darken-3 white-text">
    <div class="float-left">
      <div id="dd" class="wrapper-dropdown-1" tabindex="1">
        <h4 id="dropdown-title" style="cursor: pointer;" class="card-title noselect ">
          Clubs - <span id="filter"><%= params[:filter].nil? ? "All" : params[:filter] %></span>
          <i id="sort-icon" class="fas fa-caret-down fa-sm"></i>
        </h4>
        <div class="dropdown card card-body" id="dropdown-list">
            <li class="<%= params[:filter] == "All" || params[:filter].nil? ? "dropdown-item-active" : ""  %>">All</a></li>
            <li class="<%= params[:filter] == "Pending" ? "dropdown-item-active" : ""  %>">Pending</a></li>
            <li class="<%= params[:filter] == "Approved" ? "dropdown-item-active" : ""  %>">Approved</a></li>
            <li class="<%= params[:filter] == "Rejected" ? "dropdown-item-active" : ""  %>">Rejected</a></li>
            <li class="<%= params[:filter] == "My Class" ? "dropdown-item-active" : ""  %>">My Class</a></li>
        </div>
      </div>
    </div>

    <% if logged_in? %>
      <div class="float-right">
        <%= link_to ("New Club").html_safe, new_club_path, class: "btn btn-sm btn-white black-text"%>
      </div>
    <% end %>
  </div>
  <div class="card-body" style="padding: 0px;">
    <ul class="list-group list-group-flush">
      <%= render @clubs %>
    </ul>
  </div>
</div>
