<% provide :title, "Clubs" %>

<div class="card">
  <div class="card-header blue darken-3 white-text">
    <h3 class="card-title">
      Clubs
      <% if logged_in? %>
        <%= link_to ("<i class='fas fa-plus fa-lg' style='color: dodgerblue;'></i>").html_safe, new_club_path, class: "btn btn-sm btn-white float-right card-header-button"%>
      <% end %>
    </h3>
  </div>
  <div class="card-body" style="padding: 0px;">
    <ul class="list-group list-group-flush">
      <%= render @clubs %>
    </ul>
  </div>
</div>