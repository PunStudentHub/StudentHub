<% provide :title, "Clubs" %>

<div class="card">
  <div class="card-header blue darken-3 white-text">
    <div class="float-left">
      <h4 class="card-title">Clubs</h4>
      <%= render 'shared/filter_dropdown.html.erb', path: clubs_path, timed: false %>
    </div>
    
    <% if logged_in? %>
      <div class="float-right">
        <%= link_to ("New Club").html_safe, new_club_path, class: "btn btn-sm btn-info"%>
      </div>
    <% end %>
  </div>
  <div class="card-body" style="padding: 0px;">
    <ul class="list-group list-group-flush">
      <%= render @clubs %>
    </ul>
  </div>
</div>
