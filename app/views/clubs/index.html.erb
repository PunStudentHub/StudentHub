<% provide :title, "Clubs" %>

<div class="card">
  <div class="card-header blue darken-3 white-text">
    <div class="float-left">
      <%= render 'shared/index_dropdown', name: "Clubs", 
      filter_options: %w{Approved Pending Rejected} + ["My Class"] %>
    </div>

    <% if logged_in? %>
      <div class="float-right">
        <%= link_to ("New Club").html_safe, new_club_path, class: "btn btn-sm btn-white black-text"%>
      </div>
    <% end %>
  </div>
  <div class="card-body" style="padding: 0px;">
    <ul class="list-group list-group-flush">
      <%= render @clubs %>
    </ul>
  </div>
</div>

