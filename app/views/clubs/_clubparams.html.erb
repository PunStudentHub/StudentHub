<%= form_for(@club, url: url) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <% if submit_text == "Create Club" %>
    <%= link_to submit_text, "", :onclick => "$('#new_club').submit()", class: "btn blue darken-3 btn-block" %>
  <% elsif submit_text == "Save Edits"%>
    <%= link_to submit_text, "", :onclick => "$('.edit_club')[0].submit()", class: "btn btn-warning btn-block" %>
  <% end %>
<% end %>
