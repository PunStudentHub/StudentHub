<% provide(:title, "My Stuff") %>
<div class="row">
  <div class="col-md-8">
    <%= render 'shared/model_ataglance',  path: clubs_path,
                                          display_name: 'My Clubs',
                                          count: @user_clubs.count,
                                          variable: @user_clubs,
                                          nomore: '1' %>
    <%= render 'shared/model_ataglance',  path: events_path,
                                          display_name: 'My Events',
                                          count: @user_events.count,
                                          variable: @user_events,
                                          nomore: '1' %>
    <%= render 'shared/model_ataglance',  path: announcements_path,
                                          display_name: 'My Announcements',
                                          count: @user_announcements.count,
                                          variable: @user_announcements,
                                          nomore: '1' %>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header blue darken-3 white-text">
        <h4 class="card-title">
          <%= content_tag(:a, "Useful Info", href: '#', class: "text-white")%>
        </h4>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to "Lunch Menu", href='https://www.punahou.edu/calendars/cafeteria-menus/academy' %></li>
        <li class="list-group-item"><%= link_to "The Bulletin & more", href='https://www.punahou.edu/students/student-portal' %></li>
        <li class="list-group-item"><%= link_to "Map of Punahou", href='https://resources.finalsite.net/images/v1530648103/punahou/gzvvypt7plhfrr0p2kzu/CampusMap.pdf' %></li>

      </ul>
    </div>
    <%= render 'shared/model_ataglance',  path: reports_path,
                                          display_name: 'My Reports',
                                          count: @user_reports.count,
                                          variable: @user_reports,
                                          nomore: '1' %>
  </div>
</div>
