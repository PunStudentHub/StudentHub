<li class="list-group-item">
  <div class="float-left">
    <h5><%= link_to announcement.title, announcement %></h5>
    <small>Posted by <%= link_to User.find(announcement.user_id).name, User.find(announcement.user_id) %> 
      <%= distance_of_time_in_words(announcement.created_at.to_time, Time.now) + " ago" %></small>
  </div>
  <% if logged_in? %>
    <% if current_user.admin? %>
      <div class="float-right">
        <%= link_to "Edit", edit_announcement_path(announcement), class: "text-warning"%> |
        <%= link_to "Delete", announcement_path(announcement), method: :delete, class: "text-danger", 
                  data: {confirm: "Are you sure you want to do this?"} %>
      </div>
    <% end %>
  <% end %>
  
</li>