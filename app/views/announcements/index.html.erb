<% provide(:title, "Announcements") %>
<%= will_paginate @announcements %>
<div class="card">
  <div class="card-header blue darken-3 white-text">
    <h3 class="card-title">
      Announcements
      <% if logged_in? && current_user.can_do(:moderate)%>
        <%= link_to ("<i class='fas fa-plus fa-lg' style='color: dodgerblue;'></i>").html_safe, new_announcement_path, class: "btn btn-sm btn-white float-right card-header-button"%>
      <% end %>
    </h3>
  </div>
  <div class="card-body" style="padding: 0px;">
    <ul class="list-group list-group-flush">
      <%= render @announcements %>
    </ul>
  </div>
</div>

<%= will_paginate @announcements %>
