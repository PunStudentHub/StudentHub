<% provide(:title, "Announcements") %>
<div class="row navigation-tools">
  <div class="col-lg-6">
    <%= will_paginate @announcements %>
  </div>
  <div class="col-lg-6">
    <% if logged_in? %>
      <%= link_to ("New Announcement").html_safe, new_announcement_path, class: "btn btn-sm btn-outline-success float-right"%>
    <% end %>
  </div>
</div>
<div class="card">
  <div class="card-header blue darken-3 white-text">
    <h4 class="card-title">
      Announcements
    </h4>
  </div>
  <div class="card-body" style="padding: 0px;">
    <ul class="list-group list-group-flush">
      <%= render @announcements %>
    </ul>
  </div>
</div>

<%= will_paginate @announcements %>
