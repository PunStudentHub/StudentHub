<% provide(:title, "Events") %>
<% if logged_in? %>
  <div class="card">
    <div class="card-header blue darken-3 white-text">
      <div class="float-left">
        <h4 class="card-title">
          Events
        </h4>
        <%= render 'shared/filter_dropdown.html.erb', path: events_path, timed: true %>
      </div>
      <div class="float-right">
        <% if logged_in? %>
          <%= link_to ("New Event").html_safe, new_event_path,
            class: "btn btn-sm btn-info"%>
        <% end %>
      </div>
    </div>
    <div class="card-body" style="padding: 0px;">
      <ul class="list-group list-group-flush">
        <%= render @events %>
      </ul>
    </div>
  </div>
<% else %>
  <% flash.now[:warning] = "Log in to view events" %>
<% end %>
