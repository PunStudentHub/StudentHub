<% provide(:title, 'Sections') %>
<div class="card">
  <div class="card-header blue darken-3 white-text">
    <h3 class="card-title">
      My Sections
      <% if logged_in? && (current_user.can_do(:admin) || current_user.can_do(:teach))%>
        <%= link_to ("<i class='fas fa-plus fa-lg' style='color: dodgerblue;'></i>").html_safe, new_section_path, class: "btn btn-sm btn-white float-right card-header-button"%>
      <% end %>
    </h3>
  </div>
  <div class="card-body" style="padding: 0px;">
    <% if !current_user.sections.empty? %>
      <ul class="list-group list-group-flush">
        <%= render current_user.sections.all %>
      </ul>
    <% else %>
      You aren't in any sections.
      <%= link_to "Add Sections", '#' %>
    <% end %>
  </div>
</div>
