<!--

Parameters:
- object
- model_name
-->
<% if logged_in? %>
  <% if current_user.can_do(:moderate) %>
    <% unless object.approved %>
      <%= content_tag :a,
        class: "text-success approve_icon model-action",
        onclick: "approve('#{model_name}', '#{object.hash_id}')",
        id: "approve-" + object.hash_id do %>
        <%= content_tag :div,
          class: "approve-wrapper" do %>
          <%= content_tag :i,
            title: "Approve",
            class: 'far fa-check-square ' do %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
