<!--
  Parameters:
  - display_name
  - path
  - count
  - variable
 -->
<div class="card">
  <div class="card-header blue darken-3 white-text">
    <h3 class="card-title">
      <%= content_tag(:a, display_name, href: path, class: "text-white")%>
      <% if display_name == 'Announcements' %>
        <i class="fas fa-bullhorn float-right"></i>
      <% elsif display_name.include?('Blog') %>
        <i class="fas fa-pencil-alt float-right"></i>
      <% end %>
    </h3>
  </div>
  <% if true %>
    <ul class="list-group list-group-flush">
      <%= render variable.take(5) %>
    </ul>
    <div class="card-body see-more-section">
      <%= link_to 'See more...', path, class: 'text-primary' %>
    </div>
  <% else %>
    <p class="card-text"><%= link_to "Log In", "/auth/google_oauth2" %> to view <%= display_name %></p>
  <% end %>
</div>
