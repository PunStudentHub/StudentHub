
<% if logged_in? %>
  <% if current_user.can_do(:faculty_mod) %>
    <% unless object.final %>
      <%= content_tag :a,
        class: "text-info approve_icon",
        onclick: "finalize('#{model_name}', '#{object.hash_id}')",
        id: "finalize-" + object.hash_id do %>
        <%= content_tag :div,
          class: "approve-wrapper" do %>
          <%= content_tag :i,
            class: 'far fa-check-square ' do %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
