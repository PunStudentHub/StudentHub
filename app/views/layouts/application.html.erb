<!DOCTYPE html>
<html>
  <head>
    <title><%= get_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="google-site-verification" content="q1hxLiMflJBbT_9qWo2BGAKzSA84oPYdXsX3uKlVh5s" />
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <main role="main" class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %><br>
      <% end %>
      <%= yield %>

      <pre><code><%= debug(params) if Rails.env.development? %></code></pre>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
